@model WebAppDulich.Data.Tour

@{
    ViewData["Title"] = "TourDescription";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var ListProduct = (IEnumerable<WebAppDulich.Models.TourViewModel>)ViewBag.ListProduct;
}

<div id="vnt-wrapper">
    <div id="vnt-container">
        <div id="vnt-content">
            <div id="vnt-navation" class="breadcrumb">
                <div class="wrapper">
                    <div class="navation">
                        <ul><li><a href="@Url.Action("Index","Home")">Trang chủ</a></li><li><a href="#">Tour du lịch</a></li><li>Chi tiết tour</li><li class="hidden-xs"><a href="#">@Model.Name</a></li></ul>
                    </div>
                </div>
            </div>
            <div class="box_mid">
                <div class="wrapper">
                    <div class="mid-title">
                        <h1 class="title-main"> @Model.Name</h1>
                    </div>
                    <div class="mid-content">

                        <div class="block-detail wrap-scroll">
                            <div class="row cel-p10">
                                <div class="col-md-4 col-sm-12 col-xs-12 pull-right">

                                    <div class="box-detail-tour">
                                        <table class="table table-striped">
                                            <tbody>
                                                <tr>
                                                    <td><div> <i class="fa fa-address-book"></i> Mã code: </div></td>
                                                    <td><span class="color1">@Model.Code</span></td>
                                                </tr>
                                                <tr>
                                                    <td><div><i class="fa fa-arrows"></i> Loại hình: </div></td>
                                                    <td>@Model.CategoryName</td>
                                                </tr>

                                                <tr>
                                                    <td><div><i class="fa fa-asterisk"></i> Điểm đi:</div></td>
                                                    <td>@Model.DeparturePoint</td>
                                                </tr>

                                                <tr>
                                                    <td><div><strong><i class="fa fa-caret-square-o-down"></i> Điểm đến:</strong></div></td>
                                                    <td>@Model.PlaceName</td>
                                                </tr>

                                                <tr>
                                                    <td><div><i class="fa fa-crosshairs"></i> Địa danh:</div></td>
                                                    <td>@Model.Destination</td>
                                                </tr>

                                                <tr>
                                                    <td><div><i class='far fa-calendar'></i> Thời gian:</div></td>
                                                    <td>@Model.Time</td>
                                                </tr>
                                                <tr>
                                                    <td><div><i class='fas fa-plane'></i> Khởi hành:</div></td>
                                                    <td>@Model.Start</td>
                                                </tr>

                                                <tr>
                                                    <td><div><i class='fas fa-truck'></i> Phương tiện:</div></td>
                                                    <td>@Model.Vehicle</td>
                                                </tr>

                                                <tr>
                                                    <td><div><i class='fas fa-dollar-sign'></i> Giá từ:</div></td>
                                                    <td>
                                                        <div class="color1 fs20"><strong>   @double.Parse(Model.Price.ToString()).ToString("#,##0")   đ</strong></div>
                                                    </td>
                                                </tr>

                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="btn-addcart">
                                        <a href="/home/OrderTour/@Model.Id" class="btn btn-primary">
                                            <i class="fa fa-shopping-cart"></i> Đặt tour
                                        </a>
                                    </div>
                                    <div class="box-detail-tour hasBg hidden-lg hidden-md">


                                        <div class="box-short">
                                            <table class="table-detail">
                                                <tbody>
                                                    <tr>
                                                        <td colspan="3">
                                                            <div class="i-label fa-building">Công ty:</div>
                                                        </td>
                                                        <td colspan="4">Lữ Hành Việt Nam</td>
                                                    </tr>
                                                    <tr>
                                                        <td colspan="3">
                                                            <div class="i-label fa-map-marker-alt">Địa chỉ:</div>
                                                        </td>
                                                        <td colspan="4">Số 9 Phan Kế Bính, phường Đa Kao, Quận 1, HCM</td>
                                                    </tr>
                                                    <tr>
                                                        <td colspan="3">
                                                            <div class="i-label fa-user-circle">Tư vấn:</div>
                                                        </td>
                                                        <td colspan="4">Ms Liên</td>
                                                    </tr>
                                                    <tr>
                                                        <td colspan="3">
                                                            <div class="i-label fa-phone">Tel:</div>
                                                        </td>
                                                        <td colspan="4"><a href="tel:0934466296">0936.00.79.66</a></td>
                                                    </tr>
                                                    <tr>
                                                        <td colspan="3">
                                                            <div class="i-label fa-edit">Chat qua:</div>
                                                        </td>
                                                        <td>
                                                            <div><img alt="icon-zalo-new2" data-ck-zoom="yes" src="/tour/vnt_upload/tour/02_2020/icon-zalo-new2.png" style="width: 30px; height: 30px;"></div>
                                                        </td>
                                                        <td>
                                                            <div><img alt="icon-viber-new" data-ck-zoom="yes" src="/tour/vnt_upload/tour/02_2020/icon-viber-new.png" style="width: 30px; height: 30px;"></div>
                                                        </td>
                                                        <td colspan="2">
                                                            <div><img alt="icon-mess" data-ck-zoom="yes" src="/tour/vnt_upload/tour/02_2020/icon-mess.png" style="height: 40px; width: 40px;"></div>
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>

                                    <div class="div_adv hidden-sm hidden-xs"></div>


                                </div>
                                <div class="col-md-8 col-sm-12 col-xs-12">


                                    <div class="slide-info">
                                        <div id="slideImgFor" class="slick-init slick-initialized slick-slider">
                                            <img class="img-fluid" style="width:100%;" src="@Model.Logo" />
                                        </div>


                                    </div>
                                </div>
                            </div>

                            <div class="detail-tour">
                                <div class="row cel-p10">

                                    <div class="col-md-8 col-sm-12 col-xs-12">

                                        <div class="block-accordion">

                                            <div class="vnt-accordion" id="accordion">
                                                <div class="panel ">

                                                    <div class="accordion-title">
                                                        <a data-toggle="collapse" data-parent="#accordion" href="#collapse1" class="collapse"> Nội dung chi tiết <i class="fas fa-angle-down rotate-icon"></i></a>
                                                    </div>

                                                    <div id="collapse1" class="accordion-content collapse in">
                                                        <div class="desc">


                                                            <h2 class="box-info">
                                                                <h2><strong>ĐIỂM NỔI BẬT CỦA CHƯƠNG TRÌNH:</strong></h2>
                                                                <div class="info-content">
                                                                    @Html.Raw(Model.Description)
                                                                </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                    </div>
                                    <br />
                                    <div class="facebook-comment" style="padding-top:10px;">
                                        <div class="fb-comments fb_iframe_widget fb_iframe_widget_fluid_desktop" data-href="https://dulichvietnam.com.vn/tour/tour-du-lich-bali-4-ngay-3-dem-tu-ho-chi-minh-bay-vietjet-air-ks-4-sao.html" data-width="100%" data-num-posts="5" data-colorscheme="light" fb-xfbml-state="rendered" fb-iframe-plugin-query="app_id=1305829822896074&amp;color_scheme=light&amp;container_width=803&amp;height=100&amp;href=https%3A%2F%2Fdulichvietnam.com.vn%2Ftour%2Ftour-du-lich-bali-4-ngay-3-dem-tu-ho-chi-minh-bay-vietjet-air-ks-4-sao.html&amp;locale=en_US&amp;sdk=joey&amp;width=" style="width: 100%;"><span style="vertical-align: bottom; width: 100%; height: 213px;"><iframe name="f54592afbfc1dc" width="1000px" height="100px" data-testid="fb:comments Facebook Social Plugin" title="fb:comments Facebook Social Plugin" frameborder="0" allowtransparency="true" allowfullscreen="true" scrolling="no" allow="encrypted-media" src="https://www.facebook.com/plugins/comments.php?app_id=1305829822896074&amp;channel=https%3A%2F%2Fstaticxx.facebook.com%2Fx%2Fconnect%2Fxd_arbiter%2F%3Fversion%3D46%23cb%3Df2f16c78506fe68%26domain%3Ddulichvietnam.com.vn%26is_canvas%3Dfalse%26origin%3Dhttps%253A%252F%252Fdulichvietnam.com.vn%252Ff1b8a677df47974%26relation%3Dparent.parent&amp;color_scheme=light&amp;container_width=803&amp;height=100&amp;href=https%3A%2F%2Fdulichvietnam.com.vn%2Ftour%2Ftour-du-lich-bali-4-ngay-3-dem-tu-ho-chi-minh-bay-vietjet-air-ks-4-sao.html&amp;locale=en_US&amp;sdk=joey&amp;width=" style="border: none; visibility: visible; width: 100%; height: 213px;" class=""></iframe></span></div><div id="fb-root" class=" fb_reset"><div style="position: absolute; top: -10000px; width: 0px; height: 0px;"><div></div></div></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="mb30">
                            <div class="style-title-1">
                                <div class="fl"><h2 class="stTitle">Tour hot  khác</h2></div>
                                <div class="fr">
                                    <div class="link-more-2">
                                        <a href="#">Xem thêm</a>
                                    </div>
                                </div>
                                <div class="clear"></div>
                            </div>
                            <div class="slide-tour slick-initialized slick-slider">

                                <div aria-live="polite" class="slick-list draggable">
                                    <div class="slick-track">
                                       @foreach (var item in ListProduct.Take(6))
                                       {

                                        <div class="item slick-slide slick-current slick-active col-md-4"  data-slick-index="0" aria-hidden="false" tabindex="-1" role="option" aria-describedby="slick-slide00" style="margin-bottom:10px;">
                                            <div class="item-tour">
                                                <div class="i-img">
                                                    <a href="/home/tourDescription/@item.Id" title="#" tabindex="0">
                                                        <img src="@item.Logo" alt="@item.Logo">
                                                        <span class="i-address">@item.PlaceName</span>
                                                    </a>
                                                </div>
                                                <div class="i-desc">
                                                    <div class="i-title">
                                                        <h3><a href="/home/tourDescription/@item.Id" tabindex="0">@item.Name</a></h3>
                                                    </div>
                                                    <div class="mb5 text-overflow">
                                                        <div class="i-price">@double.Parse(item.Price.ToString()).ToString("#,##0")  đ </div>
                                                    </div>
                                                    <div class="i-content">
                                                        <div class="text-overflow"><strong>Loại hình:</strong> @item.CategoryName</div>
                                                        <div class="text-overflow"><strong>Điểm đến:</strong> @item.DeparturePoint</div>
                                                        <div class="text-overflow"><strong>Địa danh:</strong> @item.Destination</div>
                                                        <div class="text-overflow"><strong>Thời gian:</strong> @item.Time</div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                       }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>